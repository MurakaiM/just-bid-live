<%
    getType = function(type){
        if(type == 1){
            return 'General'
        } else if(type == 2){
            return 'Payment'
        }else if(type == 3){
            return 'Product'
        } else if(type == 4){
            return 'Report about seller'
        } else if(type == 5){
            return 'Customer service'
        } else if(type == 6){
            return 'Other'
        }
    }
%>

