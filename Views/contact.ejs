<!DOCTYPE html>
<html lang="eng">  

  <head>
    <!--Head include!-->
    <%-include('./Common/head')%>
    <link rel="stylesheet" href="<%=resources%>/g.assets/css/responsive.css">  
  </head>

  <body class="preloading">

    <div class="content">
      <!--Menu include!-->
      <%-include('./Common/menu', { page : pageName , user : currentUser })%>

      <div class="single">

          <form id="contact" class="ui form former">
              <h3 class="ui image header"> 
                <img src="<%=resources%>/g.assets/img/icon/bookmark-1.png" alt="store"> 
                Contact
              </h3>

              <div class="field fileds-margin">
                <label>Personal information</label>
                <div class="two fields">
                  <div class="field">
                    <input type="text" name="firstName" placeholder="First Name">
                  </div>
                  <div class="field">
                    <input type="text" name="lastName" placeholder="Last Name">
                  </div>
                </div>
              </div>
              <div class="field fileds-margin">
                <label>General information</label>
                <div class="two fields">
                  <div class="field">
                    <input type="text" name="email" placeholder="Email">
                  </div>
                  <div class="field">
                    <select class="ui selection dropdown" name="type">
                      <option value="">Type of question</option>
                      <option value="1">General</option>
                      <option value="2">Payment</option>
                      <option value="3">Product</option>
                      <option value="4">Report about seller</option>
                      <option value="5">Customer service</option>
                      <option value="6">Other</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="field fileds-margin">
                <label>Message</label>
                <div class="field">
                  <textarea name="message" rows="6" placeholder="Type your message here..."></textarea>
                </div>
              </div>

              <div class="ui custom success message">
                <div class="header">Successfully submitted</div>
                <p>Your question will be checked as soon as possible.</p>
              </div>

              <div class="ui custom error message">
                <div class="header">Action failure</div>
                <p>Error occurred during submitting. Please try again later.</p>
              </div>

              <div class="submit_holder">
                <div class="ui submit button">Submit</div>
              </div>
          </form>

      </div>

      <%-include('./Common/each')%>
      <%-include('./Common/footer')%>
    </div>
  </body>

  <!--Head include!-->
  <%-include('./Common/scripts')%>
  <script src="<%=resources%>/u.assets/js/contact.js" charset="utf-8"></script>

</html>
