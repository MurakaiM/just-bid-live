<%-include('../Function/funcitons')%>
<!DOCTYPE html>
<html lang="eng">

    <head>
        <!--Head include!-->
        <%-include('../Common/mobile')%>
        <%-include('../Common/head')%>
        <link rel="stylesheet" href="<%=resources%>/u.assets/css/user.css" />
        <link rel="stylesheet" href="<%=resources%>/g.assets/css/orders.css" />
        <link rel="stylesheet" href="<%=resources%>/g.assets/css/responsive.css">
    </head>
    <body class="preloading">
        <div class="content">
            <!--Menu include!-->
            <%-include('../Common/menu', { page : pageName , user : currentUser })%>
            <div class="row products">
              <div class="col-md-2">
                <%-include('./my_menu', { active : 2 })%>
              </div>
              <div class="col-md-10">                     
                    <div class="ui segment none">           
                        <div class="row">         
                            <%if(winnings.length == 0){%>
                                <div class="empty-notify">
                                    <img src="<%=resources%>/g.assets/img/commercialicons/bag.png">
                                    <span> You don't have any active orders for now . </span>
                                </div>
                            <%}%>

                            <%winnings.forEach(elem =>{%>
                                <div class="col-sm-6 col-md-6 col-lg-4">
                                    <div class="product ui flex orders order">
                                        <div class="first">
                                            <div class="collapsing image">
                                                <img src="<%=elem.product.prTypes.colors[elem.type.typeId.split('|')[0]].image%>" alt="" />
                                            </div>
                                        </div>
                                        <div class="second">
                                            <div class="information">
                                                <div class="title nomargin"> <%=elem.product.prTitle%> </div>
                                                <div class="types"> <%=elem.type.title%></div>
                                                <div class="cost">
                                                    <div class="option">                                          
                                                        <span class="labeler">  <i class="fa fa-check" aria-hidden="true"></i> Price : </span>
                                                        <span class="info">   <i class="fa fa-usd" aria-hidden="true"></i> <%=(elem.lastBid/100).toFixed(2)%> </span>
                                                    </div>                                            
                                                    <div class="option">                                          
                                                        <span class="labeler">  <i class="fa fa-truck" aria-hidden="true"></i> Shipping : </span>
                                                        <span class="info">   <i class="fa fa-usd" aria-hidden="true"></i> <%=elem.product.prShipment%> </span>
                                                    </div>
                                                    <div class="option">                                          
                                                        <span class="labeler">  <i class="fa fa-hashtag" aria-hidden="true"></i> Qunatity : </span>
                                                        <span class="info"> 1</span>
                                                    </div>
                                                </div>                                       
                                            </div> 
                                        </div>
                                        <div class="third">
                                            <div class="current">
                                                <div class="title">Information</div>                                        
                                                <div class="option first">                                          
                                                    <span class="labeler"><i class="fa fa-question" aria-hidden="true"></i> Status: </span>
                                                    <span class="info"><%=elem.status%></span>
                                                </div>
                                                <div class="option">                                          
                                                    <span class="labeler"><i class="fa fa-clock-o" aria-hidden="true"></i> Created: </span>
                                                    <span class="info"><%=convertDate(elem.createdAt)%></span>
                                                </div>
                                                <div class="option">                                          
                                                    <span class="labeler"><i class="fa fa-barcode" aria-hidden="true"></i> Track: </span>
                                                    <span class="info small"> <%= (elem.productTrack) ? elem.productTrack : "No track added yet" %> </span>
                                                </div> 
                                            </div> 
                                        </div>
                                    </div>  
                                </div>
                            <%})%>
                        </div>                                        
                    </div>               
              </div>
            </div>

            <%-include('../Common/each')%>
            <%-include('../Common/footer')%>
        </div>
    </body>

    <!--Head include!-->
    <%-include('../Common/scripts')%>
    <script src="<%=resources%>/g.assets/js/tabulizer.js"></script>
    <script src="<%=resources%>/u.assets/js/personal/user.js"></script>

</html>