<!DOCTYPE html>
<html lang="eng">

  <head>
    <!--Head include!-->
    <%-include('../Common/mobile')%>
   <%-include('../Common/head')%>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.css"/>
    <link rel="stylesheet" href="<%=resources%>/g.assets/css/responsive.css">
  </head>

  <body class="preloading">
    <div class="content">
      <!--Menu include!-->
      <%-include('../Common/minimenu', { page : pageName  })%>

      <div class="single">
          <form id="sellerIn" class="ui form former small">
              <h3 class="ui image header flexcenter"> <img src="<%=resources%>/g.assets/img/commercialicons/briefcase.png" alt="store"> Sign in as seller</h3>
    
              <div class="ui two column grid">
                    <div class="column social">
                        <a href="/user/signin/facebook?seller=true" class="ui facebook button">
                        <i class="facebook icon"></i>
                        Facebook
                        </a>
                    </div>
                    <div class="column social">
                        <a href="/user/signin/google?seller=true" class="ui google plus button">
                        <i class="google plus icon"></i>
                        Google
                        </a>
                    </div>
              </div>
              <div class="ui horizontal divider gray">Or</div>

             
              <div class="field">
                <input type="text" placeholder="Email" name="email">
              </div>
              <div class="field">
                  <input type="password" placeholder="Password" name="password">
              </div>

              <div class="center">
                  <a class="not" href="/forgot">Forgot password ?</a>
              </div>

              <div class="ui error custom message">
                  <div class="header">Action Forbidden</div>
                  <p></p>
              </div>

              <div class="buttons container">
                  <button type="submit" class="ui submit button">Sign In</button>
                  <a class="ui button original" href="/seller/signup">Sign Up</a>
              </div>
          </form>
      </div>
     
      <%-include('../Common/footer')%>
    </div>
  </body>

  <!--Head include!-->
  <%-include('../Common/scripts')%>
  <script src="<%=resources%>/a.assets/js/signin.js" charset="utf-8"></script>

</html>